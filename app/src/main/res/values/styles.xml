<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MulledWine</item>
        <item name="colorPrimaryDark">@color/MulledWine</item>
        <item name="colorAccent">@color/MulledWine</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/MulledWine</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/MulledWine</item>
    </style>

    <style name="cart_dialog"
        parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>
